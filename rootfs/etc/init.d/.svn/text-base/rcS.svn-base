#!/bin/sh

. /etc/init.d/functions
. /etc/profile

#build /dev
mount | grep /dev > /dev/null 2>&1
if [ $? -ne 0 ]; then
	mount -o size=8M -t tmpfs udev /dev
	mkdir /dev/pts
	mkdir /dev/shm
fi

[ ! -d /proc ] && mkdir -p /proc
[ ! -d /sys  ] && mkdir -p /sys
[ ! -d /var  ] && mkdir -p /var
[ ! -d /tmp  ] && mkdir -p /tmp

#build proc sys var tmp ...
mount -a

#make some basic nodes
makenode

#link user file
makeuser

for service in /etc/s.rc.d/S??*; do
        $service start
done

exit 0
